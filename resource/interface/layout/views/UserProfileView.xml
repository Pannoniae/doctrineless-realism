<!--                                                    <Children>-->
<!--                                                        <PictureButton id="icon_controller" >-->
<!--                                                            <Resource value="/interface/pages/main/controller"/>-->
<!--                                                        </PictureButton>-->
<!--                                                    </Children>-->
<!--                                                </FlowPanel>-->
<!--                                            </Children>-->
<!--                                        </FlowPanel>-->
                                        <DockPanel placement="center" >
                                            <Children>
                                                <UserNameView id="txt_nickname" clanTag="true" format="user_profile2/nick" placement="left">
                                                    <PreferredSize x="110"/>
                                                    <TextStyle value="e(shadow)f(main)y."/>
                                                    <TextClip value="true" showHint="true"/>
                                                </UserNameView>
                                                <FlowPanel direction="horizontal" valign="center" placement="right" halign="center">
                                                    <Children>
														<StaticText id="txt_level"/>
														<ComboBox id="cb_armies"/>
													</Children>
                                                </FlowPanel>
                                            </Children>
                                        </DockPanel>
                                    </Children>
                                </DockPanel>
                            </Children>
                        </DockPanel>
                    </Children>
                </StackPanel>
            </Children>
        </DockPanel>
    </Content>
</Layout>