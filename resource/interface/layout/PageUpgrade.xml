<?xml version="1.0" encoding="UTF-8" ?>
<Layout xmlns="http://www.digitalmindsoft.eu/xmllayout"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.digitalmindsoft.eu/xmllayout LayoutSchema.xsd"
        id="page_sample"
        version="1"
        skin="main_menu_dark_skin">
    <Properties>
        <tier1>
            <image>/interface/pages/main/upgrade_tier1</image>
            <link>http://store.steampowered.com/app/302670/Call_to_Arms/</link>
        </tier1>
        <tier2>
            <image>/interface/pages/main/upgrade_tier2</image>
            <link>http://store.steampowered.com/app/374390/Call_to_Arms__Deluxe_Edition_upgrade/</link>
        </tier2>
        <tier3>
            <image>/interface/pages/main/upgrade_tier3</image>
            <link>http://store.steampowered.com/app/561140/Call_to_Arms__Season_Pass/</link>
        </tier3>
    </Properties>
    <Content>
        <StackPanel id="page_root">
            <Ables mouse="true"/>
            <Children>
                <DialogRef refid="gui_background"/>
                <FlowPanel direction="vertical" halign="center" valign="center">
                    <Children>
                        <FrameView id="frame_content" resource="/interface/skin/game/frame/window2">
                            <PreferredSize x="800" />
                            <HeaderContent>
                                <StackPanel>
                                    <Children>
                                        <ClickablePictureDialog id="banner" resource="/interface/pages/main/upgrade_edition_header" zoomMode="stretch" centerX="true" />
                                    </Children>
                                </StackPanel>
                            </HeaderContent>
                            <Content>
                                <DockPanel vgap="20">
                                    <Insets top="10" bottom="10" />
                                    <Children>
                                        <DockPanel placement="center" vgap="10">
                                            <Children>
                                                <StackPanel id="content" placement="center">
                                                    <Children>
                                                        <StaticText id="txt_content">
                                                            <Text key="promo/text" />
                                                        </StaticText>
                                                    </Children>
                                                </StackPanel>
                                                <StackPanel placement="bottom">
                                                    <Children>
                                                        <FlowPanel direction="horizontal" halign="center" gap="5">
                                                            <Children>
                                                                <StackPanel id="btn_upgrade_tier1_container">
                                                                    <PreferredSize x="260" y="260"/>
                                                                </StackPanel>

                                                                <StackPanel id="btn_upgrade_tier2_container">
                                                                    <PreferredSize x="260" y="260"/>
                                                                </StackPanel>

                                                                <StackPanel id="btn_upgrade_tier3_container">
                                                                    <PreferredSize x="260" y="260"/>
                                                                </StackPanel>
                                                            </Children>
                                                        </FlowPanel>
                                                    </Children>
                                                </StackPanel>
                                            </Children>
                                        </DockPanel>
                                        <FlowPanel placement="bottom" halign="center" direction="horizontal" gap="20">
                                            <Insets bottom="10" top="10" />
                                            <Children>
                                                <MenuLinkButton id="btn_extra">
                                                    <Text key="button/store" textTransform="toUpper" />
                                                </MenuLinkButton>
                                                <MenuLinkButton id="btn_close">
                                                    <Text key="button/continue" textTransform="toUpper"/>
                                                </MenuLinkButton>
                                            </Children>
                                        </FlowPanel>
                                    </Children>
                                </DockPanel>
                            </Content>
                        </FrameView>
                    </Children>
                </FlowPanel>
            </Children>
        </StackPanel>
    </Content>
</Layout>